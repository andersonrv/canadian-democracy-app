<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/representative_pic"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:contentDescription="desc"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/representative_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/representative_pic"
        android:paddingBottom="10dp"
        android:text="Representative Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/representative_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/representative_name"
        android:layout_toRightOf="@id/representative_pic"
        android:paddingBottom="10dp"
        android:text="Party"
        android:textSize="20sp" />

</RelativeLayout>